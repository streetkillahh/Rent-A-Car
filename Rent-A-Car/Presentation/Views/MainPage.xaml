<Page x:Class="Rent_A_Car.Presentation.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:Rent_A_Car.Presentation.ViewModels">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Content="Добавить автомобиль" Command="{Binding AddCarCommand}" HorizontalAlignment="Left" Margin="10"/>

        <DataGrid ItemsSource="{Binding Cars}" AutoGenerateColumns="False" IsReadOnly="True" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Марка" Binding="{Binding Brand}" />
                <DataGridTextColumn Header="Модель" Binding="{Binding Model}" />
                <DataGridTextColumn Header="Цена/час" Binding="{Binding PricePerHour}" />
                <DataGridTextColumn Header="Доступен" Binding="{Binding IsAvailable}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>