<Page x:Class="Rent_A_Car.Presentation.Views.CarDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Марка:" FontSize="14" FontWeight="Bold" />
        <TextBlock Text="{Binding Car.Brand}" Grid.Row="1" />

        <TextBlock Text="Модель:" FontSize="14" FontWeight="Bold" Grid.Row="2" />
        <TextBlock Text="{Binding Car.Model}" Grid.Row="3" />

        <TextBlock Text="Цена в час:" FontSize="14" FontWeight="Bold" Grid.Row="4" />
        <TextBlock Text="{Binding Car.PricePerHour}" Grid.Row="5" />

        <TextBlock Text="Доступен:" FontSize="14" FontWeight="Bold" Grid.Row="6" />
        <TextBlock Text="{Binding Car.IsAvailable}" Grid.Row="7" />

        <TextBlock Text="Количество часов аренды:" FontSize="14" FontWeight="Bold" Grid.Row="8" Margin="0,10,0,0" />
        <StackPanel Orientation="Horizontal" Grid.Row="9" Margin="0,5,0,10">
            <Button Content="-" Command="{Binding DecreaseHoursCommand}" Width="30" />
            <TextBlock Text="{Binding RentalHours}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" />
            <Button Content="+" Command="{Binding IncreaseHoursCommand}" Width="30" />
        </StackPanel>

        <Button Content="Сохранить аренду" Command="{Binding SaveRentalCommand}" Grid.Row="10" Width="150" HorizontalAlignment="Left" />
    </Grid>
</Page>