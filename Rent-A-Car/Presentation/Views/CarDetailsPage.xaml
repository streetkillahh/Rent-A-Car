<Page x:Class="Rent_A_Car.Presentation.Views.CarDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1E1E1E">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button Content="Вернуться"
                HorizontalAlignment="Left"
                Width="100"
                Click="Button_Back"/>
        
        <StackPanel Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Left">
            <TextBlock Text="Название:" />
            <TextBlock Text="{Binding Car.Name}" 
                       Grid.Row="3" />

            <TextBlock Text="Цена в час:" />
            <TextBlock Text="{Binding Car.PricePerHour}" />

            <TextBlock Text="Доступен:" />
            <TextBlock Text="{Binding Car.IsAvailable}" />
        
            <TextBlock Text="Количество часов аренды:" 
                       Margin="5" />
            <StackPanel Orientation="Horizontal" 
                        Margin="5"
                        HorizontalAlignment="Center">
                <Button Content="-" 
                        Command="{Binding DecreaseHoursCommand}" 
                        Width="30" />
                <TextBlock Text="{Binding RentalHours}" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center" 
                           Width="50" TextAlignment="Center"
                           Margin="5"/>
                <Button Content="+" 
                        Command="{Binding IncreaseHoursCommand}" 
                        Width="30" />
        </StackPanel>

        <Button Content="Сохранить аренду" 
                Command="{Binding SaveRentalCommand}" 
                Width="auto" 
                HorizontalAlignment="Center"
                Margin="5"/>
        </StackPanel>
    </Grid>
</Page>