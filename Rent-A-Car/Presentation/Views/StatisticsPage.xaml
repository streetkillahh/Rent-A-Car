<Page x:Class="Rent_A_Car.Presentation.Views.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Статистика">

    <Grid Margin="20">
        <StackPanel>

            <StackPanel Orientation="Horizontal">
                <!-- Выбор автомобиля -->
                <StackPanel Margin="0 0 0 20">
                    <TextBlock Text="Выбрать автомобиль" 
                               VerticalAlignment="Center" Margin="0 0 10 3"/>
                    <ComboBox ItemsSource="{Binding AvailableCars}"
                              SelectedItem="{Binding SelectedCar}"
                              DisplayMemberPath="Name"
                              Width="200"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsSynchronizedWithCurrentItem="True"
                              Style="{StaticResource ClickableComboBoxStyle}" />
                </StackPanel>

                <!-- Выбор периода -->
                <StackPanel Margin="0 0 0 20">
                    <TextBlock Text="Выбрать период" 
                               VerticalAlignment="Center" Margin="0 0 10 3"/>
                    <ComboBox ItemsSource="{Binding TimeRanges}"
                              SelectedItem="{Binding SelectedTimeRange}"
                              Width="155"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              IsSynchronizedWithCurrentItem="True"
                              SelectedIndex="0"
                              Style="{StaticResource ClickableComboBoxStyle}"/>
                </StackPanel>

            </StackPanel>
            <!-- Статистика -->
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Автомобилей:" FontWeight="Bold" />
                    <TextBlock Text="{Binding TotalCars}" Margin="5,0,0,10" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Доступно:" FontWeight="Bold" />
                    <TextBlock Text="{Binding AvailableCarsCount}" Margin="5,0,0,10" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Общее время аренды (часов):" FontWeight="Bold" />
                    <TextBlock Text="{Binding TotalHours}" Margin="0,0,0,10" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Количество аренд:" FontWeight="Bold" />
                    <TextBlock Text="{Binding TotalRentals}" Margin="0,0,0,10" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Общий доход:" FontWeight="Bold" />
                    <TextBlock Text="{Binding TotalRevenue, StringFormat=C2}" />
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>