<Page x:Class="Rent_A_Car.Presentation.Views.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Статистика">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Статистика аренды" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="Общее количество автомобилей:" FontWeight="Bold" />
            <TextBlock Text="{Binding TotalCars}" Margin="0,0,0,10" />

            <TextBlock Text="Доступно автомобилей:" FontWeight="Bold" />
            <TextBlock Text="{Binding AvailableCars}" Margin="0,0,0,10" />

            <TextBlock Text="Общее время аренды (часов):" FontWeight="Bold" />
            <TextBlock Text="{Binding TotalHours}" Margin="0,0,0,10" />

            <TextBlock Text="Общий доход:" FontWeight="Bold" />
            <TextBlock Text="{Binding TotalRevenue, StringFormat=C2}" />
        </StackPanel>
    </Grid>
</Page>