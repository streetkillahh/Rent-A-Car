<Window x:Class="Rent_A_Car.Presentation.Views.Windows.AddCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить автомобиль" Height="200" Width="400"
        Background="#1E1E1E">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition  Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Название автомобиля"
                       VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                     Text="{Binding Name}"  
                     HorizontalAlignment="Left"
                     Margin="10 0" Width="160"/>
        </Grid>
        
        <Grid Grid.Row="1"
              VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       Text="Цена в час" 
                       VerticalAlignment="Center"/>
            <TextBox Grid.Column="1"
                     Text="{Binding PricePerHour}" 
                     HorizontalAlignment="Left"
                     Margin="10 0" Width="160"/>
        </Grid>
        <Button Grid.Row="2"
                Content="Сохранить" 
                Command="{Binding SaveCommand}" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,0" Width="auto"
                VerticalAlignment="Center"/>
    </Grid>
</Window>