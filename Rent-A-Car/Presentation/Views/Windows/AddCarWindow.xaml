<Window x:Class="Rent_A_Car.Presentation.Views.Windows.AddCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить автомобиль" Height="400" Width="800"
        Background="#1E1E1E">
    <Grid Margin="10">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>

                </Grid.RowDefinitions>

                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Название автомобиля"
                       VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                     Text="{Binding Name}"  
                     HorizontalAlignment="Left"
                     Margin="10 0" Width="160"/>
                </Grid>

                <Grid Grid.Row="1"
                  VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                       Text="Цена в час" 
                       VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                     Text="{Binding PricePerHour}" 
                     HorizontalAlignment="Left"
                     Margin="10 0" Width="160"/>
                </Grid>

                <Grid Grid.Row="2"
                  VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="Мин. время" 
                           VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                         Text="{Binding MinRentalHours}" 
                         HorizontalAlignment="Left"
                         Margin="10 0" Width="160"/>
                </Grid>

                <Grid Grid.Row="3"
                  VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="Макс. время" 
                           VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                         Text="{Binding MaxRentalHours}" 
                         HorizontalAlignment="Left"
                         Margin="10 0" Width="160"/>
                </Grid>

                <Grid Grid.Row="4"
                  VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="Шаг для скидки" 
                           VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                         Text="{Binding DiscountStepHours}" 
                         HorizontalAlignment="Left"
                         Margin="10 0" Width="160"/>
                </Grid>

                <Grid Grid.Row="5"
                  VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                           Text="Скидка за шаг" 
                           VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
             Text="{Binding DiscountPerStep}" 
             HorizontalAlignment="Left"
             Margin="10 0" Width="160"/>
                </Grid>

            </Grid>
            <StackPanel Grid.Column="1">
                <TextBox Text="{Binding ImagePath}" IsReadOnly="True" />

                <Button Content="Выбрать изображение" Command="{Binding SelectImageCommand}" />


                <!-- Предпросмотр изображения -->
                <Image Source="{Binding ImagePath}" 
                       Width="200" 
           Height="150" 
           Stretch="UniformToFill" 
                       Margin="0,10,0,0"/>
                <Button Content="Сохранить" 
                Command="{Binding SaveCommand}" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,0" Width="auto"
                VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>