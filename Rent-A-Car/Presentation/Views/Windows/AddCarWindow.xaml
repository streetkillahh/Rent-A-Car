<Window x:Class="Rent_A_Car.Presentation.Views.Windows.AddCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить автомобиль" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox Text="{Binding Name}" 
                     ToolTip="Название автомобиля" />
            <TextBox Text="{Binding PricePerHour}" 
                     TextWrapping="Wrap" />
            <CheckBox IsChecked="{Binding IsAvailable}" 
                      Content="Доступен для аренды" />
            <Button Content="Сохранить" 
                    Command="{Binding SaveCommand}" 
                    HorizontalAlignment="Left" 
                    Width="100" 
                    Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>